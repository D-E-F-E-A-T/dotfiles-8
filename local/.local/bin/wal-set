#!/usr/bin/env bash
#
# Script to set colors generated by 'wal'
# https://github.com/dylanaraps/wal

# Source generated colors.
source "${HOME}/.cache/wal/colors.sh"

reload_dunst() {
    pkill dunst
    dunst \
        -lb "${color0:=#F0F0F0}" \
        -nb "$color0" \
        -cb "$color0" \
        -lf "${color15:=#000000}" \
        -bf "$color15" \
        -cf "$color15" \
        -nfr "$color1" \
        -nf "$color15" \
        -geometry "${DUNST_SIZE:-300x20-20+10}" &
}

generate_zathurarc(){
   . $HOME/.local/bin/gen-zathurarc > $HOME/.config/zathura/zathurarc
}

main() {
    reload_dunst &
    generate_zathurarc 
}

main
