;*********************************************************
;
;                          COLORS
;
;**********************************************************
[colors]
; Base colors from .Xresources
bg          =  ${xrdb:background}
b           =  #000000
;bg-alt      = ${xrdb:color0}
bg-alt      =  #243248
fg          =  ${xrdb:foreground}
;fg-alt      = ${xrdb:color8}
fg-alt      =  #5c6b83
red         =  ${xrdb:color1}
red-alt     =  ${xrdb:color9}
green       =  ${xrdb:color2}
green-alt   =  ${xrdb:color10}
yellow      =  ${xrdb:color3}
yellow-alt  =  ${xrdb:color11}
blue        =  ${xrdb:color4}
blue-alt    =  ${xrdb:color12}
magenta     =  ${xrdb:color5}
magenta-alt =  ${xrdb:color13}
cyan        =  ${xrdb:color6}
cyan-alt    =  ${xrdb:color14}
white       =  ${xrdb:color7}
white-alt   =  ${xrdb:color15}

;**********************************************************
;
;                       GLOBAL WM SETTINGS
;
;**********************************************************
[global/wm]
margin-top = 0
margin-bottom = 0

;*********************************************************
;
;                       BAR SETTINGS
;
;********************************************************

[bar/right]
monitor   = ${env:MONITOR:HDMI2}
bottom    = false
width     = 99%
height    = 24
offset-x  = 10
offset-y  = 10
override-redirect = false

background = ${colors.bg}
foreground = ${colors.fg}

border-bottom-size = 0
border-bottom-color = ${colors.bg}
border-top-size = 0
border-top-color = ${colors.bg}
border-right-size = 0
border-right-color = ${colors.bg}
border-left-size = 0
border-left-color = ${colors.bg}

spacing = 0
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = Tewi:style=Regular:size=8;1
font-1 = Siji:style=Bold:size=11;1
font-2 = monofur for Powerline:style=Regular:size=18;4
font-3 = Font Awesome 5 Free:style=Solid:size=13;3

tray-position = none
tray-padding = 0
tray-transparent = true
tray-background = ${colors.bg}

modules-left = search p-menu bspwm p-wm
modules-center = 
modules-right = p-right-yellow wifi p-right-bm temp p-right-magenta cpu p-right-black memory p-right-blue bat

[bar/left]
monitor   = ${env:MONITOR:HDMI1}
bottom    = false
width     = 99%
height    = 24
offset-x  = 10
offset-y  = 10
override-redirect = false

background = ${colors.bg}
foreground = ${colors.fg}

border-bottom-size = 0
border-bottom-color = ${colors.bg}
border-top-size = 0
border-top-color = ${colors.bg}
border-right-size = 0
border-right-color = ${colors.bg}
border-left-size = 0
border-left-color = ${colors.bg}

spacing = 0
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = Tewi:style=Regular:size=8;1
font-1 = Siji:style=Bold:size=11;1
font-2 = monofur for Powerline:style=Regular:size=18;4
font-3 = Font Awesome 5 Free:style=Solid:size=13;3

tray-position = none
tray-padding = 1
tray-transparent = true
tray-background = #10171e

modules-left = search p-menu bspwm p-wm
modules-center = 
modules-right =  p-left-green disk p-left-black qubes p-left-cyan date

;**********************************************************
;
;                   MODULES SETTINGS
;
;**********************************************************

[module/bspwm]
type = internal/bspwm

strip-wsnumbers = true

label-focused = "%name%"
label-focused-foreground = ${colors.red}
label-focused-background = ${colors.bg-alt}
label-focused-padding = 1

label-occupied = "%name%"
label-occupied-padding = 1
label-occupied-foreground = ${colors.white-alt}
label-occupied-background = ${colors.bg-alt}

label-urgent = "%nam%"
label-urgent-foreground = ${colors.cyan}
label-urgent-background = ${colors.bg-alt}
label-urgent-padding = 1

label-empty = "%name%"
label-empty-foreground = ${colors.fg-alt}
label-empty-background = ${colors.bg-alt}
label-empty-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.b}
format-foreground = ${colors.b}
format-background = ${colors.magenta}
label = "%percentage%% "

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.white-alt}
format-foreground = ${colors.white-alt}
format-background = ${colors.bg}
label = "%percentage_used%% "

[module/bat]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 100

label-discharging = "%percentage%% "
format-charging = <animation-charging><label-charging>
format-discharging = <ramp-capacity><label-discharging>
format-charging-background = ${colors.blue}
format-discharging-background = ${colors.blue}
label-discharging-foreground = ${colors.b}

label-full = " full "
format-full-prefix =  "  "
format-full-prefix-foreground = ${colors.b}
format-full-prefix-background = ${colors.blue}
format-full-background = ${colors.blue}
format-full-foreground = ${colors.b}

ramp-capacity-0 = "  "
ramp-capacity-1 = "  "
ramp-capacity-2 = "  "
ramp-capacity-foreground = ${colors.b}

label-charging = "Charging %percentage%% "
label-charging-foreground = ${colors.b}

animation-charging-0 =  "  "
animation-charging-1 =  "  "
animation-charging-2 =  "  "
animation-charging-foreground = ${colors.b}
animation-charging-framerate = 750

[module/temp]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = " <ramp> <label>"
format-warn = " <ramp> <label-warn>"
format-warn-background = ${colors.bg}
format-background = ${colors.bg}
label-foreground = ${colors.white-alt}

label = "%temperature-c% "
label-warn = "%temperature-c% "
label-warn-foreground = ${colors.red}

ramp-0 = " "
ramp-1 = " "
ramp-2 = " "
ramp-foreground = ${colors.white-alt}

[module/wifi]
type = custom/script
interval = 120
format = "<label> "
format-prefix = "  "
format-prefix-foreground = ${colors.b}
format-foreground = ${colors.b}
format-background = ${colors.yellow}
exec = ~/.config/polybar/status_net

[module/date]
type = internal/date
interval = 5
date-alt = "%a %d %b"
date = ""

time-alt = " %H:%M "
time = "%H:%M "

label = %date%%time%

format-prefix = "  "
format-foreground = ${colors.b}
format-background = ${colors.cyan}

[module/qubes]
type = custom/script
interval = 120
format = "<label> "
format-prefix = "  "
format-prefix-foreground = ${colors.white-alt}
format-background = ${colors.bg}
format-foreground = ${colors.fg}
exec = ~/.config/polybar/status_qubes

[module/disk]
type = custom/script
interval = 1200
format = "<label> "
format-prefix = "  "
format-prefix-foreground = ${colors.b}
format-background = ${colors.green}
format-foreground = ${colors.bg}
exec = ~/.config/polybar/status_disk

[module/search]
type = custom/text

content = " %{T4}%{T-} "
content-foreground = ${colors.white-alt}
content-background = ${colors.red}
click-left = ~/.config/polybar/search

